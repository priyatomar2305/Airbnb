        <div class="form-check-reverse form-switch htotal">
  <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
  <label class="form-check-label" for="flexSwitchCheckDefault"><b>total amount</b></label>
</div>
</div>

<div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 mt-4">

<% for(let list of lists){%>

<a href="/listing/<%= list._id  %>" class="alllist">


<div class="card col p-1">
  <img src="<%= list.image.url %>" class="card-img-top" alt="imgis not working" style="height: 18rem;">
  <div class="card-body">
    <p class="card-text">
<%= list.title %><br>
 &#8377;<%=  list.price%>/night <span class="gst" >+18%GST</span> 
    </p>
  </div>
  
</div>

</a>
<% } %>
</div>


<script>


 let sswitch = document.getElementById('flexSwitchCheckDefault');

 sswitch.addEventListener('click',()=>{
let gst=document.getElementsByClassName('gst');

for(let gs of gst){

if(  gs.style.display !='inline'){

  gs.style.display='inline'

}else{

  gs.style.display='none'
}}

 })
</script>