<% layout('/layouts/boilerplate.ejs') -%>

  
<style>
  
.categories {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    padding:0.3rem;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    margin: 0.5rem 0.5rem;
}

.category-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 4.5rem;
    height: 4rem;
    margin: 5px;
    padding: 15px;
    border-radius: 10px;
    text-align: center;
}

.category-item:hover {   
   transition: transform 0.2s, background-color 0.2s;
    transform: scale(1.1);
    background-color: #e0e0e0;
}

.category-item i {
    font-size: 15px;
    margin-bottom: 8px;
}

.category-item span {
    font-size: 14px;
    font-weight: bold;
    color: #333;
}
.gst{

  display: none;
}
.form-switch{
  margin: 1.3rem;border-radius: 2rem;

  box-sizing: border-box;
}
@media (max-width:1120px) {
    .hide {
        display: none;
    }
}
@media (max-width:560px) {
    .hide,.htotal{
        display: none;
    }
    img{

         max-width: 100%;
    height: auto;
    }
}
@media (max-width:324px) {
    .hide,.htotal,.hsnow{
        display: none;
    }
}

</style>


